{{#if  isManagingItrlist }}
    <div class="row">
        <div class="large-12 columns">
            <br>
            <h3 align="center">Add New Itrlist</h3>
            <hr/>
            <br>
            <fieldset>
            <legend>Please use the form below</legend>
            <br>
            <form>
              <div class="row">
                <div class="large-12 columns">
                <div class="large-12 columns">
                    <div class="row collapse prefix-radius">
                      <div class="small-3 columns">
                        <span class="prefix">Student</span>
                    </div>
                    <div class="small-9 columns">
                      <select onchange={{action (mut selectedStudent) value="target.value"}}>
                        {{#each studentModel as |studentChoice|}}
                            <option value={{studentChoice.id}} selected={{eq selectedStudent studentChoice}}>{{studentChoice.number}}</option>
                        {{/each}}
                      </select>
                    </div>
                  </div>
                  <div>
                    <br>
                  </div>
                  <div class="large-12 columns">
                    <div class="row collapse prefix-radius">
                      <div class="small-3 columns">
                        <span class="prefix">Program Name</span>
                      </div>
                      <div class="small-9 columns">
                      <select id="name">
                          <option value=Mechanical>Mechanical</option>
                          <option value=Chemical>Chemical</option>
                          <option value=Software>Software</option>
                      </select>
                      </div>
                    </div>
                  </div>
                  <div>
                    <br>
                    <br>
                  </div>
                  <div class="large-12 columns">
                    <div class="row collapse prefix-radius">
                      <div class="small-2 columns">
                        <span class="prefix">Rank</span>
                      </div>
                      <div class="small-3 columns">
                        <select id="order">
                          <option value=1>1</option>
                          <option value=2>2</option>
                          <option value=3>3</option>
                        </select>
                      </div>
                      <div class="small-2 columns">
                        <p></p>
                      </div>
                      <div class="small-2 columns">
                        <span class="prefix">Eligibility</span>
                      </div>
                      <div class="small-3 columns">
                         {{input value=eligibility type="text" placeholder="enter eligibility" }}
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </form>
        </fieldset>
        <br>
        <a href="#" class="button radius" {{action 'saveItrlist'}}>Save</a>
        <a href="#" class="button radius" {{action 'cancel'}}>Cancel</a>
      </div>
    </div>
{{else}}
    <div class="row">
        <div class="large-12 columns">
            <br>
            <a href="#" class="button round" {{action 'addNewItrlist'}}>Add Itrlists</a>
        </div>
    </div>
{{/if}}